<Defs>

    <ThingDef ParentName="VFEV_BaseMeleeWeapon_Sharp_Quality">
        <defName>KIT_CryptoHammer</defName>
        <label>crypto hammer</label>
        <description>A two-handed, high-tech hammer of unknown origin with an icy cold alloy head. Crypto weapons are laced with what appears to be a cryogenic coating along their head, targets struck by them without proper insulation may feel themselves crippled by hypothermia.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponMelee/KIT_CryptoHammer</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <techLevel>Ultra</techLevel>
        <recipeMaker Inherit="False" />
        <statBases>
            <Mass>3.5</Mass>
            <MarketValue>1450</MarketValue>
        </statBases>
        <relicChance>2</relicChance>
        <tools>
            <li>
                <label>handle</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>14</power>
                <cooldownTime>2.8</cooldownTime>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>VFEV_Cut</li>
                </capacities>
                <power>40</power>
                <armorPenetration>0.35</armorPenetration>
                <cooldownTime>3.4</cooldownTime>
            </li>
        </tools>
        <generateCommonality>0.0</generateCommonality>
        <tradeability>Buyable</tradeability>
        <weaponTags>
            <li>CryptoHeavyMelee</li>
        </weaponTags>
        <modExtensions>
            <li Class="VFECore.ThingDefExtension">
                <usableWithShields>false</usableWithShields>
            </li>
        </modExtensions>
    </ThingDef>

