<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>KIT_Gun_PlasmaPistol</defName>
        <label>plasma pistol</label>
        <description>A pistol capable of shooting metal-cored beams covered in plasma and held in place by an energy field. Shots fired from this pistol burn everything they hit, but due to how unstable they are, it’s very difficult to fire it accurately over long distances.</description>
        <techLevel>Ultra</techLevel>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/KIT_PlasmaPistol</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <soundInteract>VFE_Interact_PlasmaWeapon</soundInteract>
        <weaponClasses>
            <li>RangedLight</li>
        </weaponClasses>
        <statBases>
            <MarketValue>2300</MarketValue>
            <Mass>2</Mass>
            <AccuracyTouch>0.84</AccuracyTouch>
            <AccuracyShort>0.81</AccuracyShort>
            <AccuracyMedium>0.55</AccuracyMedium>
            <AccuracyLong>0.35</AccuracyLong>
            <RangedWeapon_Cooldown>2.45</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Plasteel>150</Plasteel>
            <ComponentSpacer>4</ComponentSpacer>
        </costList>
        <thingSetMakerTags>
            <li>RewardStandardLowFreq</li>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <weaponTags>
            <li>UltratechGun</li>
        </weaponTags>
        <recipeMaker Inherit="False" />
        <tradeability>Sellable</tradeability>
        <comps>
            <li Class="CompProperties_Art">
                <nameMaker>NamerArtWeaponMelee</nameMaker>
                <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
                <minQualityForArtistic>Excellent</minQualityForArtistic>
            </li>
        </comps>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_PlasmaPistol</defaultProjectile>
                <warmupTime>1.45</warmupTime>
                <range>12.9</range>
                <ticksBetweenBurstShots>0</ticksBetweenBurstShots>
                <burstShotCount>1</burstShotCount>
                <soundCast>VFE_PlasmaShot_Cutter</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
            </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>
    <ThingDef ParentName="BaseBullet">
        <defName>Bullet_PlasmaPistol</defName>
        <label>plasma pistol shot</label>
        <graphicData>
            <texPath>Things/Item/Weapons/Plasma_Beam</texPath>
